{
  "name": "mx-host-core-worker",
  "version": "0.2.1a",
  "description": "Generic worker code for a Matrix application host",
  "main": "dist/mx-host-core-worker.min.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn run build:fixmx && yarn run build:generic && yarn run build:dts && yarn run build:browserworker && yarn run build:sharedworker && yarn run build:serviceworker",
    "build:fixmx": "rm -rf node_modules/matrix-js-sdk/lib/*.d.ts",
    "build:generic": "webpack --env dev && webpack --env build",
    "build:browserworker": "webpack --env browserworker",
    "build:sharedworker": "webpack --env sharedworker",
    "build:serviceworker": "webpack --env serviceworker",
    "build:docs": "typedoc --mode modules --out .jsdoc src/",
    "build:dts": "yarn run build:fixmx && tsc --project tsconfig.json --declaration --emitDeclarationOnly --declarationDir dist/",
    "dev": "webpack --progress --colors --watch --env dev",
    "check-types": "tsc --noEmit",
    "test": "yarn run test:api; yarn run test:unit",
    "test:unit": "mocha --require ./test/babel-register.js --colors ./test/*.spec.ts",
    "test:api": "mocha --colors ./test/*.apispec.js",
    "test:cover:api": "cross-env NODE_ENV=test nyc mocha --timeout 10000 --recursive --colors ./test/*.apispec.js",
    "test:watch": "mocha --require ./test/babel-register.js --colors -w ./test/*.spec.ts",
    "test:cover": "cross-env NODE_ENV=test nyc mocha --timeout 10000 --require ./test/babel-register.js --require source-map-support/register --recursive --colors ./test/*.spec.ts",
    "test:lint": "eslint ./test/*.spec.ts",
    "_version": "echo VERSION: $npm_package_version",
    "upgrade-major": "./upgrade.sh"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.10.4",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/matrix-js-sdk": "^5.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.22",
    "@types/request": "^2.48.5",
    "@types/request-promise-native": "^1.0.17",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "matrix-mock-request": "^1.2.3",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "ts-loader": "^8.0.0",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.6",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "yargs": "^15.4.1",
    "yarn-upgrade-all": "^0.5.4"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "ajv": "^6.12.3",
    "chalk": "^4.1.0",
    "js-sha256": "^0.9.0",
    "localforage": "^1.9.0",
    "loglevel": "^1.6.8",
    "loglevel-plugin-prefix": "^0.8.4",
    "matrix-js-sdk": "^7.1.0",
    "rpcchannel": "^0.2.4"
  }
}
